#declare variables for window colors
set $bg-color			#d78700
set $bar-color			#000000
set $inactive-bg-color	#2f343f
set $text-color			#f3f4f5
set $inactive-text-color	#878E8D
set $urgent-bg-color		#2f343f
set $urgent-bar-color		#ffaf00
set $border #027372

#window colors table
#window						border					background				text					indicator
client.focused				$inactive-bg-color		$bg-color				$text-color				$border
client.unfocused			$inactive-bg-color		$inactive-bg-color		$inactive-text-color	$border
client.focused_inactive		$inactive-bg-color		$inactive-bg-color		$inactive-text-color	$border
client.urgent				$urgent-bg-color		$urgent-bg-color		$text-color				$border

hide_edge_borders both

#configuration for statusbar
bar {
	status_command i3blocks -c ~/.config/i3/newbar.conf
	i3bar_command i3bar -t
	font xft:hack, FontAwesome 11
		height 26
		tray_padding 0
		tray_output primary
		#tray_output none
		bindsym button1 nop
		position top
		strip_workspace_numbers yes
		colors
		{
			background #2a2c2cc9
				#type					border					background				text
				inactive_workspace		#FADE9B					#FADE9B					#000000
				focused_workspace		$bg-color				$bg-color				#000000
				urgent_workspace		$urgent-bar-color		$bar-color				$urgent-bar-color
				binding_mode			$bg-color				$bg-color				#000000
		}
}

